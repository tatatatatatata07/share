<% provide(:first_title, @meeting.title) %>
<div class="row  schedule-detail">
  <aside class="col-md-4">
    <section class="user_info">
     <h1>スケジュール作成者</h1>
      <p><%= link_to @meeting.user.name, user_path(@meeting.user.id) %></p>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <% @user = @meeting.user %>
      <h1>スケジュール日時</h1>
      <p><%= link_to "#{@meeting.start_time.month} 月 #{@meeting.start_time.day} 日 #{@meeting.start_time.hour} 時 #{@meeting.start_time.to_s[14,2]} 分", edit_meeting_path(@meeting) %><p>
   </section>
   </aside>
  <div class="col-md-8">

    <div class="schedule_show">
      <h1><%= @meeting.title %></h1>
      <div class="schedule_show_content">
        <p><%= @meeting.content %></p>
      </div>
      <% if current_user?(@meeting.user) || current_user.admin? %>
                <%= link_to "編集する", edit_meeting_path(@meeting) %>
                <%= link_to "削除する", @meeting, method: :delete,
                                               data: { confirm: "本当に削除しますか？" } %></br>
      <% end %>
    </div>
  </div>
</div>