<% provide(:first_title, "アカウント情報の変更") %>
<h1>アカウント情報の変更</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "お名前" %>
      <%= f.text_field :first_name, :placeholder => "姓", class: 'form-control' %>
      <%= f.text_field :last_name, :placeholder => "名", class: 'form-control' %>
      
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "パスワードの再確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "上記内容にて保存", class: "btn btn-secondary" %>
    <% end %>

  </div>
</div>